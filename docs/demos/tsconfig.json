{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "target": "es5",
    "outDir": ".",
    "outFile": "demos.js",
    "module": "amd",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "hr.*": [
        "../../src/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.js",
    "../../src/*"
  ],
  "compileOnSave": true
}
